<section class="login-section">
  <div class="login-container">
    <div class="login-div">
      <h1 class="header-custom1">Login</h1>
      <form action="/login" method="POST" class="form-container">
        <div class="form-group">
          <label for="username" class="custom-color3">Username</label>
          <input
            type="text"
            id="username"
            name="username"
            class="form-input"
            placeholder="Enter your username"
            required
          />
        </div>
        <div class="form-group">
          <label for="password" class="custom-color3">Password</label>
          <input
            type="password"
            id="password"
            name="password"
            class="form-input"
            placeholder="Enter your password"
            required
          />
        </div>
        <button type="submit" class="custom-btn custom-color3">Login</button>
      </form>
      <p class="custom-color2">
        Don't have an account? 
        <a href="/register" class="custom-color3">Register here</a>.
      </p>
    </div>
  </div>
</section>
