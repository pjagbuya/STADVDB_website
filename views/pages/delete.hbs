<div class="d-flex flex-row">
<!--Welcome Section-->
    <section class="flex-column">


        <!--Call to Action Section-->
        <section class= "call-to-action-section ">

            <div class="call-to-action-div flex-column">
                <p>Enter App ID to delete: </p>
                <form action="/delete/{{username}}" method="POST" id="delete-form">
                    <input type="number" id="appID" name="appID" required>
                    <button type="submit" id="delete" name="delete" class="d-flex custom-button-1">Delete</button>

            
                </form>



            </div>

        </section>

    </section>

    <div class="call-to-action-div flex-column">
        <section name="table-section">
            <table>
                <thead>
                    <tr>
                        <th>App ID</th>
                        <th>Name</th>
                        <th>Release Date</th>
                        <th>Price</th>
                        <th>Developers</th>
                    </tr>
                </thead>
                <tbody>
                    {{#each data}}
                    <tr>
                        <td>{{this.appid}}</td>
                        <td>{{this.name}}</td>
                        <td>{{this.release_date}}</td>
                        <td>{{this.price}}</td>
                        <td>{{this.developers}}</td>
                    </tr>
                    {{/each}}
                    
                </tbody>
            </table>
            
        </section> 

    </div>


</div>